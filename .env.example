# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id

# Feature Flags
NEXT_PUBLIC_ENABLE_PANCHANG=true
NEXT_PUBLIC_ENABLE_RITUALS=true
NEXT_PUBLIC_ENABLE_ENCYCLOPEDIA=true